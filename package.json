{
  "name": "ms-contas",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve",
    "devHeroku": "vue-cli-service serve --mode herokudev",
    "build": "vue-cli-service build",
    "deploy": "firebase login && firebase use default && vue-cli-service build && firebase deploy --project default",
    "buildDemo": "vue-cli-service build --mode staging",
    "deployDemo": "firebase login && firebase use demo && vue-cli-service build --mode staging && firebase deploy --project demo && firebase use default",
    "buildDev": "vue-cli-service build --mode herokudev",
    "deployDev": "firebase login && firebase use dev-mscontas && vue-cli-service build --mode herokudev && firebase deploy --project dev-mscontas && firebase use default",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "axios": "^0.19.0",
    "core-js": "^2.6.5",
    "element-ui": "^2.12.0",
    "moment": "^2.24.0",
    "normalize.css": "^8.0.1",
    "register-service-worker": "^1.6.2",
    "roboto-fontface": "*",
    "shortid": "^2.2.14",
    "v-money": "^0.8.1",
    "vee-validate": "^2.0.9",
    "vue": "^2.6.10",
    "vue-notification": "^1.3.16",
    "vue-router": "^3.0.3",
    "vue-the-mask": "^0.11.1",
    "vue-toasted": "^1.1.27",
    "vuejs-dialog": "^1.4.1",
    "vuetify": "^2.0.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-plugin-pwa": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "material-design-icons-iconfont": "^5.0.1",
    "node-sass": "^4.9.0",
    "sass": "^1.17.4",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-vuetify": "^0.6.3",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.2.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "warn"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
